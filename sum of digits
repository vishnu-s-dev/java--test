class UserMainCode {

    public int addDigits(int input1) {

        while (input1 >= 10) {  // Repeat until single digit
            int sum = 0;
            int num = input1;

            // Add each digit
            while (num > 0) {
                sum += num % 10;  // Get last digit
                num = num / 10;   // Remove last digit
            }

            // Update the number with the new sum
            input1 = sum;
        }

        return input1; // Single digit result
    }
}
